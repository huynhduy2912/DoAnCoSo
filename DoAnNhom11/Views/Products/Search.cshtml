@* @Html.Partial("ProductListPartial", Model); *@
@section Scripts {
    <script>        
        function Filter(page) {
            var minPrice = $('#minPrice').val();
            var maxPrice = $('#maxPrice').val();
            if (minPrice > maxPrice && minPrice != null && maxPrice != null) {
                alert("vui lòng nhập đúng giá trị lọc");
                return;
            }
            $.ajax({
                type: "GET",
                url: '/Products/QuerryProduct?searchString=' + '@ViewBag.Search' + '&minPrice=' + minPrice + '&maxPrice=' + maxPrice + '&page=' + page,
                success: function (data) {
                    $('#searchResults').html(data);

                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth' // Thêm hiệu ứng cuộn mượt
                    });
                },
                error: function () {
                    return;
                }
            });

        }
        $(document).ready(function () {

            Filter(1);
        });


    </script>
}

