@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>;

@{
    ViewData["Title"] = "Index";

}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Lọc theo loại</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        @foreach (var item in ViewBag.categories)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title"><button style="background-color: transparent; border: none;" onclick="getProductsByCategory(@item.ProductCategoryId)"><a>@item.TenLoai</a></button></h4>
                                </div>
                            </div>
                        }
                    </div><!--/category-productsr-->

                    <div class="brands_products">
                        <!--brands_products-->
                        <h2>Lọc Theo Hãng</h2>
                        <div class="brands-name">
                            <ul class="nav nav-pills nav-stacked">
                                @foreach (var item in ViewBag.brands)
                                {
                                    <li><button style="background-color: transparent; border: none;" onclick="getProductsByBrand(@item.BrandId)"><a>@item.TenNhanHieu</a></button></li>
                                }
                            </ul>
                        </div>
                    </div><!--/brands_products-->

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Tầm Giá</h2>
                        <div class="well">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="50000000" data-slider-step="5" data-slider-value="[0,50000000]" id="sl2"><br />
                            <b>$ 10000</b> <b class="pull-right">$50000000</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="../myLayout/images/home/quangcao3.png" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>
            <div class="col-sm-9 padding-right" id="paginationContainer">
                <div class="col-9-12 features_items">
                    <!--features_items-->
                    <h2 style="text-transform: capitalize;" class="title text-center">Danh Sách Sản phẩm</h2>
                    <div id="productContainer">@Html.Partial("ProductListPartial", Model)</div>
                    
                </div><!--features_items-->
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                </ul>
            </div>
        </div>
    </div>
</section>



