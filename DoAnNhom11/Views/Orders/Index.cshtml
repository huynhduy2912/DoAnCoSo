@model IEnumerable<DoAnNhom11.Models.Order>
<h1 style="text-align:center">Đơn hàng của tôi</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Ngày Đặt
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Địa chỉ giao hàng
            </th>
            <th>
                Ghi chú
            </th>
            <th>
                Trạng thái đơn hàng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus.TenTrangThai)
            </td>
            <td>
                    <button type="button" class="btn btn-fefault cart">
                        <a asp-action="Details" asp-route-ma="@item.OrderId" style="color:white" onmouseover="this.style.color='black'" onmouseout="this.style.color='white'">Xem chi tiết</a>

                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
