@using Microsoft.AspNetCore.Identity
@using DoAnNhom11.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">Trang Admin</a>
    </li>
    @* <li class="nav-item">
        <a id="manage" class="nav-link text-dark"  asp-controller="Orders" asp-action="OrderManager">Quản Lý Đơn Hàng</a>
    </li> *@

    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" title="Manage">Xin chào @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" style=" background-color: transparent; border: none;"><a>Đăng Xuất</a></button>
        </form>
    </li>
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Xin chào @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" style="background-color: transparent; border: none;">Đăng Xuất</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng Ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"> Đăng Nhập</a>
    </li>
}

