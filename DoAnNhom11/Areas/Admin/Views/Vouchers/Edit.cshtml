@model DoAnNhom11.Models.Voucher

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Voucher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="couponForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VoucherId" />
            <div class="form-group">
                <label asp-for="VoucherCode" class="control-label"></label>
                <input asp-for="VoucherCode" class="form-control" />
                <span asp-validation-for="VoucherCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhanTramGiam" class="control-label"></label>
                <input asp-for="PhanTramGiam" class="form-control" />
                <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiamToiDa" class="control-label"></label>
                <input asp-for="GiamToiDa" class="form-control" />
                <span asp-validation-for="GiamToiDa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonToiThieu" class="control-label"></label>
                <input asp-for="DonToiThieu" class="form-control" />
                <span asp-validation-for="DonToiThieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayBatDau"  class="control-label"></label>
                <input asp-for="NgayBatDau" id="StartDate" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayHetHan" class="control-label"></label>
                <input asp-for="NgayHetHan" id="EndDate" class="form-control" />
                <span asp-validation-for="NgayHetHan" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="SoLuongCon" class="control-label"></label>
                <input asp-for="SoLuongCon" class="form-control" />
                <span asp-validation-for="SoLuongCon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherCategoryId" class="control-label"></label>
                <select asp-for="VoucherCategoryId" class="form-control" asp-items="ViewBag.VoucherCategoryId"></select>
                <span asp-validation-for="VoucherCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('couponForm').addEventListener('submit', function (event) {
            var startDate = new Date(document.getElementById('StartDate').value);
            var endDate = new Date(document.getElementById('EndDate').value);
            if (startDate >= endDate) {
                event.preventDefault();
                alert('Ngày bắt đầu phải lớn hơn ngày kết thúc');
            }
        });
    </script>
}
