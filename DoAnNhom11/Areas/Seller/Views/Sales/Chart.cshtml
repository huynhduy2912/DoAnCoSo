
@{
    ViewData["Title"] = "Chart";
}

<canvas id="myChart" width="200" height="200" ></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Seller/Sales/GetOrdersData',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var dates = [];
                    var quantities = [];

                    data.forEach(function (item) {
                        // Định dạng ngày thành 'dd/mm/yyyy'
                        var formattedDate = moment(item.date).format('DD/MM/YYYY');
                        dates.push(formattedDate);
                        quantities.push(item.quantity);
                    });

                    // Vẽ biểu đồ
                    var ctx = document.getElementById('myChart').getContext('2d');
                    var myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: dates,
                            datasets: [{
                                label: 'Số Đơn',
                                data: quantities,
                                backgroundColor: 'rgba(255, 99, 132, 0.2)', // Màu nền của cột
                                borderColor: 'rgba(255, 99, 132, 1)', // Màu viền của cột
                                borderWidth: 1
                            }]
                        },
                        responsive: true, // Đảm bảo biểu đồ phản ứng và điều chỉnh kích thước tự động
                        maintainAspectRatio: false, // Cho phép thay đổi tỷ lệ khung hình
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    });
                },
                error: function () {
                    alert('Có lỗi xảy ra trong quá trình lấy dữ liệu!');
                }
            });

        });
    </script>
}
