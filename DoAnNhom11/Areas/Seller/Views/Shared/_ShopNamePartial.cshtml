
<div class="overlay"></div>
<div class="rectangle" style="background-image: url('@ViewBag.Shop.AnhBia');">
    <img class="circle" src="@ViewBag.Shop.AnhDaiDien" alt="Avatar">
    <div class="content">
        <h4>@ViewBag.Shop.TenCuaHang</h4>
    </div>
</div>
<style>
    :root {
        --col-height: 40px;
    }

    .rectangle {
        width: 100px; /* Chiều rộng của khối */
        height: var(--col-height); /* Chiều cao của khối */
        background-size: cover; /* Kích thước ảnh sẽ được hiển thị */
        background-position: center; /* Vị trí căn giữa của ảnh */
        background-repeat: no-repeat; /* Không lặp lại hình ảnh */
        background-position-x:right;
    }

    .circle {
        position: absolute; /* Tùy chỉnh vị trí tuyệt đối của nội dung */
        width: 35px; /* Kích thước của hình tròn */
        height: 35px; /* Kích thước của hình tròn */
        top: 50%;
        transform: translateY(-50%);
        border-radius: 50%; /* Làm cho hình ảnh tròn */
        border: 2px solid #ccc;
        margin-left: 10px;
    }

    .content {
        position: absolute; /* Tùy chỉnh vị trí tuyệt đối của nội dung */
        top: 50%;
        transform: translateY(-50%);
        left: 20%;
        color: black; /* Màu văn bản */
        text-align: center;
    }

    .overlay {
        position: absolute; /* Định vị tuyệt đối */
        width: 20%; /* Chiều rộng của overlay bằng với khối */
        height: 80%; /* Chiều cao của overlay bằng với khối */
        background-color: rgba(0, 0, 0, 0.1); /* Màu xám mờ với độ mờ là 50% */
        border-radius: 5%; /* Làm cho hình ảnh tròn */
    }



</style>


